{
    "repo": "paulkaefer/cowsay-files",

    "description": "A collection of additional/alternative cowsay files.",

    "logo": [
        "nnnnpr",
        "nnnnpr",
        "rygbpr",
        "rygbpr",
        "rynbpn",
        "rynbpn"
    ],

    "dependencies": ["cowsay"],
    "actions": {
        "install": [
            "make install",
            "echo \"export COWPATH='/usr/local/share/cowsay-files/cows/:/usr/share/cowsay/cows'\" >> ~/.bashrc"
        ],
        "remove": [
            "make uninstall"
        ]
    }
}
