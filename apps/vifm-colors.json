{
    "repo": "vifm/vifm-colors",

    "description": "Various colorschemes for vifm file explorer.",

    "logo": [
        "wdwbdd",
        "wyggwd",
        "wywbpr",
        "wyggwr",
        "wywbwd",
        "dwggwd"
    ],

    "dependencies": ["vifm"],
    "actions": {
        "install": [
            "cp *.vifm /usr/local/etc/vifm/colors"
        ],
        "remove": [
            "rm /usr/local/etc/vifm/colors/*",
            "cp Default.vifm /usr/local/etc/vifm/colors"
        ]
    }
}
