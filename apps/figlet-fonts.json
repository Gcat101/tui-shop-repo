{
    "repo": "xero/figlet-fonts",

    "description": "xero's collection of figlet ascii art fonts",

    "logo": [
        "nnnnnn",
        "nrylbn",
        "nrynnn",
        "nrylbn",
        "nrynnn",
        "nrynnn"
    ],

    "dependencies": ["figlet"],
    "actions": {
        "install": [
            "sudo mkdir /usr/share/figlet/fonts",
            "sudo mv ./* /usr/share/figlet/fonts"
        ],
        "remove": [
            "sudo rm -r /usr/share/figlet/fonts"
        ]
    }
}
